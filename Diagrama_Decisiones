class Nadador {
      int nivelUML;
      
      boolean navadando {
            return nivelUML > 5;
      }
      
      void nadando {
            nivelUML++;
            
            if (nadando()) {
                  femeunacerveza();
            } else {
                  descansarUnPoco();
                  nadando();
            }
      }
      
      void femeunacerveza() { /***/ }
      void descansarUnPoco() { /***/ }
}
